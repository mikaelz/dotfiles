# prepopulate-query-feeds yes
auto-reload yes

show-read-feeds no
reload-threads 60
feed-sort-order unreadarticlecount-asc

feedlist-format "%4i %n %S %11u %t"
articlelist-format  "%4i %f %D %?T?|%-17T| ?%t %L"

error-log ".newsboat/error.log"

# Copy article url into clipboard
macro c set browser "xsel -b <<<" ; open-in-browser ; set browser linkhandler
macro w set browser "links" ; open-in-browser ; set browser linkhandler

bind-key j down
bind-key k up
bind-key j next articlelist
bind-key k prev articlelist
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key U show-urls
bind-key ^d pagedown
bind-key ^u pageup

unbind-key C feedlist
confirm-exit no
cleanup-on-quit no

highlight article "^Feed:.*" color5 color0
highlight article "^Title:.*" color3 color0 bold
highlight article "^Author:.*" color2 color0
highlight article "^Date:.*" color223 color0
highlight article "^Link:.*" color4 color0
highlight article "^Flags:.*" color9 color0
highlight article "\\[[0-9][0-9]*\\]" color66 default bold
highlight article "\\[image [0-9][0-9]*\\]" color109 default bold
highlight article "\\[embedded flash: [0-9][0-9]*\\]" color66 default bold

color listnormal        white black
color listnormal_unread white black
color listfocus         white red bold
color listfocus_unread  white red bold
color info              cyan blue
color background        white black
color article           white black

ignore-mode "display"
ignore-article "*" "title =~ \"ipad|iphone|ios|apple id\""
ignore-article "*" "title =~ \"icinga|zabbix|kde plasma|mastodon|qt \""
ignore-article "*" "title =~ \"dogecoin|solana|ethereum|altcoin|monero\""
ignore-article "*" "title =~ \"fiat|peugeot|honda|renault\""
ignore-article "*" "title =~ \"oppo| nest \""
ignore-article "*" "title =~ \"alexa|vmware\""
ignore-article "*" "title =~ \"tiktok|whatsapp\""
ignore-article "*" "title =~ \"hulu|netflix|disney\""
ignore-article "*" "title =~ \"vscode|copilot\""
ignore-article "*" "title =~ \"futbal|hokej|nba |nhl |tenis\""
ignore-article "*" "title =~ \"\.net|angular|vue|vuejs\""

ignore-article "https://9to5google.com/feed/" "title =~ \"samsung\""
ignore-article "https://www.financnasprava.sk/sk/rss/rss-novinky" "title =~ \"odstÃ¡vka\""
